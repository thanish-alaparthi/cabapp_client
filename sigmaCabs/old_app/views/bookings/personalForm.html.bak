<fieldset class="searchbox-border customerDetailsContainer">
    <legend class="searchbox-border">Customer Personal Details <a data-ng-click="fnToggleAllInfoView();" class="link">({{viewAllInfoMsg}})</a></legend>
    <div data-ng-show="bViewSelectiveField">
        <div class="fieldContainer relative left">
            <label class="control-label">Customer Name</label>
            <input type="text" ng-model="customer.customerData.name" class="form-control validate[required,maxSize[128]] large" placeholder="Name" />
        </div>
        <div class="fieldContainer relative left">
            <label class="control-label">Mobile#</label>
            <input type="text" ng-model="customer.customerData.mobile" class="form-control validate[required,maxSize[128]] large" placeholder="Mobile" />
        </div>
        <p id="insertFieldBeforeMeID" />
        <div class="fieldContainer relative left" ng-show="bShowAddMoreFields">
            <label class="control-label">Add More Details</label>
            <div style="clear:both;">
                <select style="float: left;" class="large" ng-model="nextEmptyCustomerField" ng-options="k as v for (k,v) in emptyCustomerFields"></select>
                <button style="float: left;" add-dynamic-field ng-model="nextEmptyCustomerField">Add More Data</button>
            </div>
        </div>
        <p class="clear" />
    </div>
    <div data-ng-show="bViewAllFields">
        <div class="fieldContainer relative left">
            <label class="control-label">Customer Name</label>
            <input type="text" ng-model="customer.customerData.name" class="form-control validate[required,maxSize[128]] large" placeholder="Name" />
        </div>
        <div class="fieldContainer relative left">
            <label class="control-label">Mobile#</label>
            <input type="text" ng-model="customer.customerData.mobile" class="form-control validate[required,maxSize[128]] large" placeholder="Mobile" />
        </div>
        <div class="fieldContainer relative left">
            <label class="control-label">Alt. Mobile#</label>
            <input type="text" ng-model="customer.customerData.altMobile" class="form-control validate[required,maxSize[128]] large" placeholder="Alt Mobile" />
        </div>
        <div class="fieldContainer relative left">
            <label class="control-label">Email</label>
            <input type="text" ng-model="customer.customerData.email" class="form-control validate[required,maxSize[128]] large" placeholder="Email" />
        </div>
        <div class="fieldContainer relative left">
            <label class="control-label">Source</label>
            <input type="text" ng-model="customer.customerData.source" class="form-control validate[required,maxSize[128]] large" placeholder="How customer found SigmaCabs" />
        </div>
        <p class="clear" />
    </div>
</fieldset>
